<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcoGreenPath_C23PM02" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green_background</item>
        <item name="colorPrimaryVariant">@color/light_green_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EcoGreenPath_C23PM02.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EcoGreenPath_C23PM02.CustomActionBar">
        <item name="fontFamily">@font/nunito_black</item>
        <item name="android:textColorPrimary">@color/font_color1</item>
    </style>

    <style name="Theme.EcoGreenPath_C23PM02.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EcoGreenPath_C23PM02.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>